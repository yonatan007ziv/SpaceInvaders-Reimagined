<UserControl x:Class="SpaceInvadersGameWindow.Components.UIElements.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Height="0" Width="0">
    <Button Name="button">
        <Grid>
            <Image Name="buttonImage"></Image>
            <Viewbox>
                <TextBlock Name="buttonText" Foreground="White"/>
            </Viewbox>
        </Grid>
    </Button>
</UserControl>